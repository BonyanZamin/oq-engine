Bootstrap: docker
From: python:3.10-slim
Stage: compile-image

%environment
    oq_branch=engine-3.17
	export oq_branch

%labels
    maintainer="GEM Foundation <devops@openquake.org>"
    vendor="GEM Foundation"

%post

    useradd -m -u 1000 -s /bin/bash openquake
    apt-get update &&  apt-get install -y --no-install-recommends build-essential gcc git libcap-dev
    # Create venv
    VIRTUAL_ENV=/opt/openquake
    python3 -m venv $VIRTUAL_ENV
    PATH="$VIRTUAL_ENV/bin:$PATH"
    #clone repository and install engine
    git clone https://github.com/gem/oq-engine.git --depth=1 --branch $oq_branch && cd oq-engine && \
    pip --disable-pip-version-check install . -r requirements-py310-linux64.txt --no-warn-script-location

Bootstrap: docker
From: python:3.10-slim
Stage: build-image

%environment
    export VIRTUAL_ENV=/opt/openquake
    export PATH="$VIRTUAL_ENV/bin:$PATH"

%files
    scripts/oq-db_start.sh ${HOME}
    %files from compile-image
    /opt/openquake/ /opt/openquake/

%post
    LANG=en_US.UTF-8
    LOCKDOWN=False
    useradd -m -u 1000 -s /bin/bash openquake
    su -  openquake # USER openquake
    HOME=/home/openquake
    mkdir -p ${HOME}
    cd ${HOME}
    PATH="/opt/openquake/bin:$PATH"
    #
    mkdir oqdata

%environment
    export LANG=en_US.UTF-8
    export LOCKDOWN=False
    export HOME=/home/openquake
    export PATH="/opt/openquake/bin:$PATH"

%runscript
    cd ${HOME}
    exec /bin/bash -c ./oq-db_start.sh "$@"

%startscript
    cd ${HOME}
    exec /bin/bash -c ./oq-db_start.sh "$@"
